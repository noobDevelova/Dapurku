<%- include("partials/header.ejs") %>

<section id="produk">

  <div class="container">
    <h1 class="my-5">Produk Dapurku</h1>
    <div class="card text-center my-3">
      <div class="card-header">
        <h3>List Produk</h3>
      </div>
      <div class="card-body row">
        <% menu.forEach((item) => { %>
        <div class="card mx-auto" style="width: 18rem;">
          <div class="card-body">
            <h2 class="card-title"><%= item.jenis_makanan %></h2>
            <h4>Stok: <%= item.stok %></h4>
            <div class="my-3">
              <form action="/pelanggan/order/<%= item.id_makanan  %>" method="post">
                <label for="kuantitas" class="form-label">Kuantitas</label>
                <input class="form-control" type="number" id="kuantitas" name="kuantitas" required>
                <button type="submit" class="btn btn-primary mt-2 w-100">Pesan</button>
            </form>
            </div>
          </div>
        </div>
        <%  }) %>
      </div>
    </div>
  </div>

</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

</html>